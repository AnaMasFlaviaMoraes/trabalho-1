<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/style.css">
    <title>Usuários</title>
</head>
<body>
    <div class="menu">
        <a href="/usuarios/adicionar" class="btn btn-info">Adicionar Usuário</a>
        <br />
        <a href="/usuarios/relatorio" class="btn btn-info">Baixar Dados de Usuários</a>
    </div>
    <div>
        <h1>Lista de Usuários</h1>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Tipo</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Email</th>
                    <th scope="col">Telefone</th>
                    <th scope="col">CPF</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                <% usuarios.forEach(function(usuario) { %>
                    <tr scope="row">
                        <td><a href="/usuarios/<%= usuario.id %>"><%= usuario.id %></a></td>
                        <td><%= usuario.tipo %></td>
                        <td><a href="/usuarios/<%= usuario.id %>"><%= usuario.nome %></a></td>
                        <td><%= usuario.email %></td>
                        <td><%= usuario.telefone %></td>
                        <td><%= usuario.cpf %></td>
                        <td>
                            <div class="icones">
                                <a href="/usuarios/editar/<%= usuario.id %>"><i class="bi bi-pencil-square"></i></a>
                                <% if (usuario.tipo !== 'admin') { %>
                                    <a href="/usuarios/confirm-delete/<%= usuario.id %>"><i class="bi bi-trash"></i></a>
                                <% } %>
                            </div>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    <% if (typeof cadastroSucesso !== 'undefined' && cadastroSucesso) { %>
        <script>
            window.onload = function() {
                alert('Usuário inserido com sucesso!');
            }
        </script>
    <% } %>
    <% if (typeof editaSucesso !== 'undefined' && editaSucesso) { %>
        <script>
            window.onload = function() {
                alert('Usuário editado com sucesso!');
            }
        </script>
    <% } %>
    <% if (typeof deleteSucesso !== 'undefined' && deleteSucesso) { %>
        <script>
            window.onload = function() {
                alert('Usuário excuído com sucesso!');
            }
        </script>
    <% } %>

    <style>
        body {
            margin: 20px;
            background-color: #B9B8B2;
        }
        td{
            height: 45px;
        }
        i{
            font-size: 18px;
        }
        .icones{
            display: flex;
            justify-content: space-evenly;
        }
        .menu{
            margin-bottom: 30px;
            display: flex;
            gap: 30px;
        }
        a{
            cursor: pointer;
        }
    </style>
</body>
</html>